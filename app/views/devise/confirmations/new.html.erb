<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Reenviar e-mail de confirmação</h3>
                </div>
                <div class="panel-body">
					<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
					  <%= devise_error_messages! %>
					  <fieldset>
						  <div class="form-group">
						    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
						  </div>

						    <%= f.submit "Reenviar", class: "btn btn-lg btn-primary btn-block" %>
						</fieldset> 
					<% end %>

					<%= render "devise/shared/links" %>
              </div>
            </div>
        </div>
    </div>
</div>