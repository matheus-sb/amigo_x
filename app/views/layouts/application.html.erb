<!DOCTYPE html>
<html>
  <head>
    <title>AmigoX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
          <div class="navbar-header">
            <% if user_signed_in? %>
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
            <% end %>  
              <a class="navbar-brand" href="/">Amigo X</a>
          </div>
          <!-- /.navbar-header -->

          <%= render 'shared/menu' if user_signed_in? %>
        </nav>

        <div id="page-wrapper" class="<%= 'has-sidemenu' if user_signed_in? %>">
          <% if user_signed_in? %>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><%= yield :title %></h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
          <% end %>


          <% flash.each do |name, msg| %>
            <!-- allow for flash elements to be arrays -->
            <% if msg.class == Array %>
              <% msg.each do |message| %>
                <%= content_tag :div, message, :id => "flash_#{name}", class: "alert alert-info" %>
              <% end %>
            <% else %>
              <%= content_tag :div, msg, :id => "flash_#{name}", class: "alert alert-info" %>
            <% end %>
          <% end %>          

          <%= yield %>
        </div>  
    </div> 
  </body>
</html>
