<div class="row">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Informações do grupo <%= group.name %></h4></div>
      <div class="panel-body">
        <%= form_for group, html: {role:"form"} do |f| %>
          <% flash.now[:notice] = flash[:notice].to_a.concat group.errors.map { |attr, msg| msg } %>
          
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="fa fa-group"></i></span>
            <%= f.text_field :name, class: "form-control", placeholder: 'Nome' %>
          </div>

          <div class="form-group input-group">
            <span class="input-group-addon"><i class="fa fa-home"></i></span>
            <%= f.text_field :address, class: "form-control", placeholder: 'Endereço' %>
          </div>

          <div class="form-group input-group">
          <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>      
            <%= f.text_field :city, class: "form-control", placeholder: 'Cidade' %>
          </div>
          
          <%= f.submit "Salvar", class:"btn btn-primary" %>

          <%if group.id? %>    
            <%= link_to "Excluir Grupo", group_path(group), method: :delete, data: { confirm: 'Tem certeza que deseja excluir o grupo?' }, class: "btn btn-danger"%>
          <% end %>
        <% end %>
      </div>
    </div>
</div>