<div class="col-lg-4 col-md-6">
  <div class="panel panel-primary">
    <div class="panel-heading">
  	  <div class="row">
	    <div class="col-xs-3">
		  <i class="fa fa-user fa-3x"></i>
        </div>
	    <div class="col-xs-9 text-right">
        <% if participant.user.blank? %>
          <div><strong><%= participant.email%></strong></div>
        <% else %>
          <div><strong><%= participant.user.username %></strong></div>
        <% end %>
	    </div>
	  </div>
    </div>
    <div class="panel-footer">         
      <% if group.user == current_user && participant.user != current_user && !group.raffled %>
        <span class="pull-left">
	        <%= link_to group_participant_path(group, participant), method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } do %>
	        <i class="fa fa-times fa-lg text-danger"></i>
	      <% end%>
	    </span>
      <% end %>  
      <span class="pull-right">
  	    <% if participant.user %>
  		    <strong class="text-primary">Participante Confirmado <i class="fa fa-thumbs-o-up fa-lg"></i></strong>
  	    <% else %>
		      <strong class= "text-danger">Aguardando Confirmação <i class="fa glyphicon-hourglass fa-lg"></i></strong>
  	    <% end %> 
      </span>
      <div class="clearfix"></div> 	  
    </div>
  </div>
</div>