<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for [@group, @participant], remote: remote, html: {role: :form, 'data-model' => 'participant'} do |f| %>

  <% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participant.errors.count, "error") %> Não foi possível adicionar o amigo:</h2>

      <ul>
      <% @participant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# Added Bootstrap classes, and help-block container for error messages %>
  <div class="form-group">
    <%= f.label :email, "Email", class: 'control-label' %><br>
    <%= f.text_field :email, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <%# Added Bootstrap classes %>
  <div class="actions">
    <%= f.submit 'Convidar', class: 'btn btn-default' %>
  </div>

<% end %>